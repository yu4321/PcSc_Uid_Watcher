<Window x:Class="PcScWatcherTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PcScWatcherTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid Width="360" HorizontalAlignment="Left">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" >
            Received Value:
            </TextBlock>
            <TextBlock x:Name="recvdValue" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" FontSize="50" TextWrapping="Wrap"/>
        </Grid>
        <TextBox x:Name="tb" HorizontalAlignment="Right" Width="340" Background="Black" Foreground="White" TextChanged="TextBox_TextChanged" TextWrapping="Wrap"/>
    </Grid>
</Window>
